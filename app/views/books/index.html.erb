<h1>Books</h1>
<table class="table">
  <thead>
    <tr>
      <th class="table-title">Title</th>
      <th class="table-title__body">Body</th>
    </tr>
  </thead>

  <tbody class="table-body">
    <% @books.each do |book| %>
      <tr>
        <td>
          <%= book.title %>
        </td>
        <td>
          <%= book.body %>
        </td>
        <td>
          <%= link_to "Show", book_path(book) %>
        </td>
        <td>
          <%= link_to "edit", edit_book_path(book) %>
        </td>
        <td>
          <%= link_to "destroy", book_path(book), method: :delete, "data-confirm" => "本当に削除しますか？"  %>
        </td>
      </tr>
    <% end %>    
  </tbody>
</table>


<%= form_with(model: @book, local: true) do |f| %>
  <h1>New Book</h1>
  <% if @book.errors.any? %>
    <div class="alert alert-warning">
       <%= @book.errors.count %>errors prohibited this obj from being saved:<br>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form">
    <label for="title">Title</label>
    <%= f.text_field :title %>
  </div>
  <div class="form">
    <label for="body">Body</label>
    <%= f.text_area :body %>
  </div>
  <div class="form">
    <%= f.submit "Create Book" %>
  </div>
<% end %>