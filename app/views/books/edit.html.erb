<%= form_with model: @book, local: true do |f| %>
  <div class="form">
  <h1>Editing Book</h1>
    <label for="title">Title</label>
    <%= f.text_field :title  %>
  </div>
  <div class="form">
    <label for="body">Body</label>
    <%= f.text_area :body %>
  </div>
  <div class="form">
    <%= f.submit "edit book" %>
  </div>
<% end %>